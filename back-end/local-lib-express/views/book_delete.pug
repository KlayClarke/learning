extends layout 

block content 
  h1 #{title}: #{book.title}
  if bookinstances.length 
    p #[strong Delete the following bookinstances before attempting to delete this book.]
    div(style='margin-left:20px;margin-top:20px')
      dl 
        each bookinstance in bookinstances 
          dt 
            a(href=bookinstance.url) #{bookinstance.imprint} #{bookinstance._id} 
  else 
    p Do you really want to delete this book?
    form(method='POST' action='')
      .form-group
        input#bookid(type='hidden' name='bookid' required='true' value=book._id)
      button(type='submit') Delete 

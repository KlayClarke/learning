extends layout 

block content 
  h1= title
  form(method='POST' action='')
    .form-group 
      label(for='first_name') First Name: 
      input#first_name(type='text' placeholder='First name (Christian)' name='first_name' required='true' value=(undefined===author ? '' : author.first_name))
      label(for='family_name') Family Name: 
      input#family_name(type='text' placeholder='Family name (surname)' name='family_name' required='true' value=(undefined===author ? '' : author.family_name))
    .form-group 
      label(for='date_of_birth') Date of birth: 
      input#date_of_birth(type='date' placeholder='dd/mm/yyyy' name='date_of_birth' value=(undefined===author ? '' : author.date_of_birth_formatted_yyyy_mm_dd))
      label(for='date_of_death') Date of death: 
      input#date_of_death(type='date' placeholder='dd/mm/yyyy' name='date_of_death' value=(undefined===author ? '' : author.date_of_death_formatted_yyyy_mm_dd))
    button(type='submit') Submit 
  if errors 
    ul
      for error in errors
        li!= error.msg 